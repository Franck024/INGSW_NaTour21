<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:card_view="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginHorizontal="20dp"
    android:layout_marginVertical="8dp"
    app:cardCornerRadius="16dp"
    app:cardElevation="8dp"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintTop_toTopOf="parent"
    card_view:cardUseCompatPadding="true"
    android:id="@+id/CardView">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="8dp">

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="10dp"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="10dp"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/ivparent"
                    android:layout_width="70dp"
                    android:layout_height="70dp"
                    android:orientation="vertical"
                    android:src="@mipmap/paesaggio"
                    card_view:ignore="ContentDescription" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="8dp"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/NomePost"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"
                        android:text="Nome percorso"
                        android:textSize="20sp"
                        android:textStyle="bold"
                        card_view:ignore="HardcodedText" />

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/tvqtyParent"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="16dp"
                            android:text="Da:"
                            android:textSize="15sp"
                            card_view:ignore="HardcodedText" />

                        <TextView
                            android:id="@+id/txtUtentePost"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:paddingStart="5dp"
                            android:text="Nome utente"
                            android:textColor="@color/blue"
                            android:textSize="15sp"
                            android:textStyle="bold"
                            card_view:ignore="HardcodedText,RtlSymmetry" />

                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>

            <TextView
                android:id="@+id/tvqty"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_marginTop="0dp"
                android:layout_marginEnd="0dp"
                android:text=">"
                android:textSize="30sp"
                android:textStyle="bold"
                card_view:ignore="HardcodedText" />

        </RelativeLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="50dp"
            android:layout_marginTop="0dp"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="3dp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/txtViewDifficolta"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Difficoltà: "
                    android:textSize="15sp"
                    android:textStyle="bold"
                    card_view:ignore="HardcodedText" />

                <TextView
                    android:id="@+id/txtViewRisultatoDifficolta"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="ValoreDifficoltà: "
                    android:textSize="15sp"
                    card_view:ignore="HardcodedText" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="3dp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/txtViewArea"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Area: "
                    android:textSize="15sp"
                    android:textStyle="bold"
                    card_view:ignore="HardcodedText" />

                <TextView
                    android:id="@+id/txtViewRisultatoArea"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="ValoreArea "
                    android:textSize="15sp"
                    card_view:ignore="HardcodedText" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="3dp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/txtViewTempo"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Tempo: "
                    android:textSize="15sp"
                    android:textStyle="bold"
                    card_view:ignore="HardcodedText" />

                <TextView
                    android:id="@+id/txtViewRisultatoTempo"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="ValoreTempo "
                    android:textSize="15sp"
                    card_view:ignore="HardcodedText" />

            </LinearLayout>


        </LinearLayout>
    </LinearLayout>

</androidx.cardview.widget.CardView>
