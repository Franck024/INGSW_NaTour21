<?xml version="1.0" encoding="utf-8"?>
<androidx.drawerlayout.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/drawerLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:id="@+id/layoutToolBar2"
            android:gravity="center"
            android:layout_width="match_parent"
            android:layout_height="?actionBarSize"
            android:background="@color/lightgrey"
            android:orientation="horizontal"
            android:paddingStart="10dp"
            android:paddingEnd="15dp"
            tools:ignore="MissingConstraints"
            android:weightSum="1">

            <ImageButton
                android:id="@+id/btnSettings"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@color/lightgrey"
                android:paddingHorizontal="15dp"
                android:paddingVertical="7dp"
                android:src="@drawable/settings" />

            <TextView
                android:id="@+id/textViewHome"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Home"
                android:textSize="20dp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/textViewUtente"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:layout_marginEnd="20dp"
                android:text="Utente"
                android:textColor="@color/blue"
                android:textSize="25dp"
                android:textStyle="bold"/>

            <TextView
                android:id="@+id/textViewMessaggi"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_alignParentRight="true"
                android:layout_alignParentBottom="true"
                android:gravity="center"
                android:text="Messaggi"
                android:textSize="20dp"
                android:textStyle="bold"/>

            <ImageButton
                android:id="@+id/btn_add_itin2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:background="@drawable/btn_sfera_grigia"
                android:backgroundTint="@color/light_green"
                android:paddingHorizontal="15dp"
                android:paddingVertical="7dp"
                android:src="@mipmap/plus" />

        </LinearLayout>


       <androidx.swiperefreshlayout.widget.SwipeRefreshLayout
           android:layout_width="match_parent"
           android:layout_height="0dp"
           android:layout_weight="1"
           android:id="@+id/swipe_refresh">

           <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/RVparent2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@+id/layoutToolBar2" />

       </androidx.swiperefreshlayout.widget.SwipeRefreshLayout>


    </LinearLayout>

</androidx.drawerlayout.widget.DrawerLayout>
