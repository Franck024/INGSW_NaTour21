<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.natour21">

    <queries>
        <intent>
            <action android:name="android.intent.action.VIEW" />
            <data android:scheme="https" />
        </intent>
        <intent>
            <action android:name=
                "android.support.customtabs.action.CustomTabsService" />
        </intent>
    </queries>

    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION" />
    <uses-permission android:name="android.permission.ACCESS_COARSE_LOCATION" />
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />

    <application
        android:name="NaTourApplication"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:usesCleartextTraffic="true"
        android:theme="@style/Theme.AppCompat.Light.NoActionBar">
        <activity android:name=".MainActivity"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.amplifyframework.auth.cognito.activities.HostedUIRedirectActivity"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.VIEW" />
                <category android:name="android.intent.category.DEFAULT" />
                <category android:name="android.intent.category.BROWSABLE" />
                <data android:scheme="natour21" />
            </intent-filter>
        </activity>

        <activity android:name=".controller.ControllerLogin" />
        <activity android:name=".controller.ControllerRegistrazione" />
        <activity android:name=".controller.ControllerRecovery" />
        <activity android:name=".controller.ControllerAddItin"/>
        <activity android:name=".controller.ControllerAddItin_2" />
        <activity android:name=".map.MapActivity" />
        <activity android:name=".controller.Controller_Home" />
        <activity android:name=".controller.Controller_listChat"/>
        <activity android:name=".controller.Controller_Utente"/>
        <activity android:name=".controller.Controller_itinerario"/>
        <activity android:name=".controller.Controller_AccessoAdmin"/>
        <activity android:name=".controller.Controller_Statistiche"/>
        <activity android:name=".controller.Controller_ChatUtente"/>
        <activity android:name=".controller.Controller_Messaggi"
            android:windowSoftInputMode="adjustResize"/>


    </application>

</manifest>